# Binance API Configuration
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
BINANCE_TESTNET=false

# Trading Configuration
DEFAULT_PAIR=BTCUSDT
TIMEFRAMES=1m,5m,1h,4h,1d
HISTORY_MONTHS=7
PREDICTION_HORIZON_HOURS=4

# Model Configuration
MIN_CONFIDENCE_THRESHOLD=0.80
MAX_LEVERAGE=20
RECOMMENDED_LEVERAGE=10
RISK_PER_TRADE_PERCENT=0.5
MAX_PORTFOLIO_EXPOSURE_PERCENT=10

# Signal Configuration
COOLDOWN_SECONDS=3600
ATR_STOP_LOSS_MULTIPLIER=1.5
PROFIT_THRESHOLD_PERCENT=2.0
STOP_LOSS_THRESHOLD_PERCENT=1.0

# Monitoring and Alerting
PERFORMANCE_CHECK_INTERVAL_SECONDS=3600
DRIFT_DETECTION_WINDOW_DAYS=7
ALERT_EMAIL_SMTP_HOST=smtp.gmail.com
ALERT_EMAIL_SMTP_PORT=587
ALERT_EMAIL_USERNAME=your_email@gmail.com
ALERT_EMAIL_PASSWORD=your_app_password
ALERT_EMAIL_FROM=alerts@yourcompany.com
ALERT_EMAIL_TO=admin@yourcompany.com

# Slack Notifications (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Storage Configuration
DATA_STORAGE_PATH=./data
ARTIFACTS_STORAGE_PATH=./artifacts
LOGS_PATH=./logs

# Security
HMAC_SECRET_KEY=your_hmac_secret_key_here_32_chars_minimum
JWT_SECRET_KEY=your_jwt_secret_key_here_32_chars_minimum

# System Configuration
MAX_WORKERS=4
MEMORY_LIMIT_GB=8
LOG_LEVEL=INFO
DEBUG=false

# Database Configuration (if using external storage)
DATABASE_URL=sqlite:///./trading_system.db

# Model Selection Criteria
MIN_PRECISION=0.60
MIN_SHARPE_RATIO=1.2
MAX_DRAWDOWN_PERCENT=20.0
CALIBRATION_QUALITY_THRESHOLD=0.05

# Rate Limiting
BINANCE_RATE_LIMIT_REQUESTS_PER_MINUTE=1200
WEBSOCKET_RECONNECT_DELAY_SECONDS=5
MAX_RECONNECT_ATTEMPTS=10